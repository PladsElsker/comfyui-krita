{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Extension: Krita",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "127.0.0.1",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/pykrita/comfyui",
                    "remoteRoot": "${env:APPDATA}/krita/pykrita/comfyui"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "wait-for-debugger",
        },
        {
            "name": "Export Extension: Zip",
            "type": "debugpy",
            "python": "${cwd}/venv/Scripts/python",
            "request": "launch",
            "program": "${cwd}/export.py",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
